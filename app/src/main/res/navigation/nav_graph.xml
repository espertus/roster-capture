<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/selectCourseFragment"
        android:name="com.ellenspertus.qroster.SelectCourseFragment"
        android:label="fragment_class_select"
        tools:layout="@layout/fragment_select_course" >
        <action
            android:id="@+id/action_selectCourseFragment_to_browseFragment"
            app:destination="@id/browseFragment" />
        <action
            android:id="@+id/action_selectCourseFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.ellenspertus.qroster.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_selectCourseFragment"
            app:destination="@id/selectCourseFragment" />
    </fragment>
    <fragment
        android:id="@+id/browseFragment"
        android:name="com.ellenspertus.qroster.BrowseFragment"
        android:label="BrowseFragment">
        <argument
            android:name="crn"
            app:argType="string" />
        <action
            android:id="@+id/action_browseFragment_to_selectCourseFragment"
            app:destination="@id/selectCourseFragment" />
        <action
            android:id="@+id/action_browseFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.ellenspertus.qroster.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <argument
            android:name="crn"
            app:argType="string" />
        <action
            android:id="@+id/action_quizFragment_to_browseFragment"
            app:destination="@id/browseFragment" />
    </fragment>
</navigation>